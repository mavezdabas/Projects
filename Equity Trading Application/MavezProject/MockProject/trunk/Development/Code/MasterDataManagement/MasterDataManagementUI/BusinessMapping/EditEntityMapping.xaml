        <ComboBox x:Name="TBoxSource" Grid.Row="4" Grid.Column="1" ItemsSource="{Binding}" Margin="3"/>

        <ComboBox x:Name="CBoxDefault" Grid.Row="5" Grid.Column="1"  Margin="3"/>
        <DatePicker Name="startDate" Grid.Row="6" Grid.Column="6" SelectedDateChanged="StartDate_SelectedDateChangedEventHandler" SelectedDate="{Binding StartDate}" Margin="3" IsEnabled="False"/>
        <DatePicker Name="endDate" Grid.Row="7" Grid.Column="7" SelectedDateChanged="EndDate_SelectedDateChangedEventHandler" SelectedDate="{Binding EndDate}" Margin="3" IsDropDownOpen="False" />


        <Button Content="Save" Grid.Column="0" Grid.Row="9" Margin="5" Click="Button_Click_Save" />
        <Button Content="Cancel" Grid.Column="1" Grid.Row="10" Margin="5" Click="Button_Click_Cancel"/>
    </Grid>

