<Window x:Class="EquityTradingApplication.View.ForgotPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ForgotPassword" Height="300" Width="400">
    <Grid>
        <StackPanel Name="fPanel" Orientation="Vertical">
            <TextBox Name="tBoxEmail" Margin="60" 
                     Background="Transparent" 
                     Text="Email" 
                     GotFocus="TextBox_GotFocus" 
                    
                     Foreground="DarkBlue" Width="232"></TextBox>

            <Button Name="btnLogin" Content="Send Password" 
                    Margin="100,-20,100,0" 
                    Background="Transparent" Width="156"></Button>
        </StackPanel>
    </Grid>
</Window>
