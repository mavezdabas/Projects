    <services>
      <service name="WCFService.MyService">
        <endpoint address="" binding="basicHttpBinding" contract="WCFService.IMyService">
       
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
